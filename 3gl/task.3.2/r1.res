#include <stdio.h>\n\n#define             MAXLEN      8192\n\nint                 escape(char *s, int sz, const char *t);\nint                 get_line(char *line, int lim);\n\nint                 main(void){\n\n    char        buf[MAXLEN], target[2 * MAXLEN];\n    int         len;\n\n    while ((len = get_line(buf, MAXLEN)) > 0){\n        escape(target, sizeof(target), buf);\n        printf("%s", target);\n    }\n    return 0;\n}\n\nint                 escape(char *s, int sz, const char *t){\n    int     i = 0, j = 0;\n    while (i < sz - 2 && t[j] != '\0')\n        switch (t[j]){\n            case '\n':\n                s[i++] = '\\';\n                s[i++] = 'n';\n                j++;\n            break;\n            case '\t':\n                s[i++] = '\\';\n                s[i++] = 't';\n                j++;\n            break;\n            default:\n                s[i++] = t[j++];\n            break;\n        }\n    s[i] = '\0';\n    return i;\n}\n\nint\t\t\tget_line(char *line, int lim){\n\tint\t\tc, i;\n\tfor (i = 0; i < lim - 1 && (c = getchar()) != EOF && c != '\n'; i++)\n\t\tline[i] = c;\n\tif (c == '\n')\n\t\tline[i++] = c;\t\n\tline[i] = '\0';\n\n\treturn i;\n}\n\n\n